<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipes</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
    }

    /* Navigation Bar */
    nav {
      background-color: #333;
      color: white;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav h1 {
      margin: 0;
      font-size: 24px;
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 15px;
      margin: 0;
      padding: 0;
    }

    nav ul li {
      display: inline;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
    }

    nav ul li a:hover {
      text-decoration: underline;
    }

    /* Page Container */
    .container {
      margin: 20px auto;
      width: 90%;
      max-width: 1200px;
    }

    /* Search Bar */
.search-bar {
  display: flex;
  justify-content: center;
  gap: 10px; /* Adds spacing between input and button */
}

.search-bar input {
  width: 70%; /* Adjusted width */
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
}

.search-bar button {
  padding: 10px 20px;
  background-color: #007BFF;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}


    .search-bar button:hover {
      background-color: #0056b3;
    }

    /* Recipe Grid */
    .recipe-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .recipe-card {
      background: white;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
    }

    .recipe-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .recipe-card h2 {
      font-size: 18px;
      margin-bottom: 10px;
      color: #333;
    }

    .recipe-card a {
      color: #007BFF;
      text-decoration: none;
      font-weight: bold;
    }

    .recipe-card a:hover {
      text-decoration: underline;
    }

    .favorite-button {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
      margin-top: 10px;
    }

    .favorite-button:hover {
      background-color: #218838;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->

  <div class="container">
    <!-- Search Bar -->
    <div class="search-bar">
      <form method="GET" action="/recipes">
        <input type="text" name="q" placeholder="Search for recipes..." value="{{query}}">
        <button type="submit">Search</button>
      </form>
    </div>

    <!-- Recipe Grid -->
    <div class="recipe-grid">
      {{#each recipes}}
        <div class="recipe-card">
          <img src="{{this.image}}" alt="{{this.label}}">
          <h2>{{this.label}}</h2>
          <p>Calories: {{this.calories}}</p>
          <p>Protein: {{this.protein}} {{this.proteinUnit}}</p>
          <a href="{{this.url}}" target="_blank">View Recipe</a>
          <button class="favorite-button" onclick="favoriteRecipe('{{this.uri}}')">Favorite</button>
        </div>
      {{/each}}
    </div>
  </div>

  <script>
    // Handle favorite button clicks
    function favoriteRecipe(recipeUri) {
      fetch('/favorites', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ uri: recipeUri }),
      })
      .then(response => {
        if (response.ok) {
          alert('Recipe added to favorites!');
        } else {
          alert('Failed to add recipe to favorites.');
        }
      })
      .catch(err => {
        console.error('Error:', err);
        alert('An error occurred.');
      });
    }
  </script>
</body>
</html>





