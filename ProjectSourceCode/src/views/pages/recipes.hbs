<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipes</title>
  <style>
    /* General Styling */
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f9f9f9;
    }

    /* Top Suggestion Buttons */
    .suggestions {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 20px 0;
    }

    .suggestions button {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      background-color: #007BFF;
      color: white;
    }

    .suggestions button:hover {
      background-color: #0056b3;
    }

    /* Page Container */
    .container {
      margin: 20px auto;
      width: 90%;
      max-width: 1200px;
    }

    /* Search Bar */
    .search-bar {
      display: flex;
      justify-content: center;
      gap: 10px;
      /* Spacing between input and button */
      margin-bottom: 20px;
    }

    .search-bar input {
      width: 70%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 16px;
    }

    .search-bar button {
      padding: 10px 20px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .search-bar button:hover {
      background-color: #0056b3;
    }

    /* Recipe Grid */
    .recipe-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .recipe-card {
      background: white;
      border: 1px solid #ddd;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      padding: 15px;
      text-align: center;
    }

    .recipe-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 10px;
    }

    .recipe-card h2 {
      font-size: 18px;
      margin-bottom: 10px;
      color: #333;
    }

    .recipe-card a,
    .recipe-card button {
      display: inline-block;
      margin: 5px 10px;
      /* Adds spacing between buttons */
      text-decoration: none;
    }

    .favorite-button {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }

    .favorite-button:hover {
      background-color: #218838;
    }

    /* Pagination Buttons */
    .pagination {
      display: flex;
      justify-content: center;
      margin: 20px 0;
    }

    .pagination button {
      padding: 10px 15px;
      border: 1px solid #ddd;
      background-color: white;
      border-radius: 5px;
      cursor: pointer;
      margin: 0 5px;
    }

    .pagination button.active {
      background-color: #007BFF;
      color: white;
      border: none;
    }

    .pagination button:hover {
      background-color: #0056b3;
      color: white;
    }
  </style>
</head>

<body>
  <!-- Top Search Suggestions -->
  <div class="suggestions">
    <button onclick="searchTerm('vegan')">Vegan</button>
    <button onclick="searchTerm('healthy')">Healthy</button>
    <button onclick="searchTerm('high protein')">High Protein</button>
    <button onclick="searchTerm('keto')">Keto</button>
    <button onclick="searchTerm('low carb')">Low Carb</button>
  </div>

  <div class="container">
    <!-- Search Bar -->
    <div class="search-bar">
      <form method="GET" action="/recipes">
        <input type="text" name="q" placeholder="Search for recipes..." value="{{query}}">
        <button type="submit">Search</button>
      </form>
    </div>

    <!-- Recipe Grid -->
    <div class="recipe-grid">
      {{#each recipes}}
      <div class="recipe-card">
        <img src="{{this.image}}" alt="{{this.label}}">
        <h2>{{this.label}}</h2>
        <p>Calories: {{this.calories}}</p>
        <p>Protein: {{this.protein}} g</p>
        <a href="{{this.url}}" target="_blank" class="btn btn-link">View Recipe</a>
        <button class="favorite-button" onclick="favoriteRecipe('{{this.label}}')">Favorite</button>
      </div>
      {{/each}}
    </div>

    <!-- Pagination -->
    <div class="pagination">
      <button onclick="changePage(1)" class="active">1</button>
      <button onclick="changePage(2)">2</button>
      <button onclick="changePage(3)">3</button>
      <!-- Add as many buttons as needed -->
    </div>
  </div>

  <script>
    function searchTerm(term) {
      const queryField = document.querySelector('input[name="q"]');
      queryField.value = term;
      queryField.form.submit();
    }

    function favoriteRecipe(recipeLabel) {
      fetch('/favorite-recipe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          name: recipeLabel, // Match back-end expectation
        }),
      })
        .then(response => response.json())
        .then(data => alert(data.message || 'Recipe added to favorites!'))
        .catch(err => console.error('Error:', err));
    }


    function changePage(pageNumber) {
      // Add logic to handle pagination requests
      alert(`Switch to page ${pageNumber}`);
    }
  </script>
</body>

</html>