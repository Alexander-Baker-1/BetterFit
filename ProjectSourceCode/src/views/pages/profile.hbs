<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{fullname}}'s Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border: none;
        }

        .card-title {
            color: #495057;
        }

        .btn-custom {
            background-color: #7A4D7C;
            color: #fff;
        }

        .btn-custom:hover {
            background-color: #6b416d;
        }
    </style>
</head>

<body>
    {{> message}}
    <div class="container mt-5">
        <h1 class="text-center mb-4"><b>{{fullname}}'s Profile</b></h1>
        <div class="row g-4">
            <!-- Settings Card -->
            <div class="col-md-6">
                <div class="card p-4">
                    <h4 class="card-title"><b>Settings</b></h4>
                    <form action="/profile" method="POST">
                        <div class="mb-3">
                            <label for="password" class="form-label">Change Password</label>
                            <input type="password" class="form-control" id="password" name="newPassword" placeholder="New Password">
                        </div>
                        <button class="btn btn-custom w-100" type="submit">Update</button>
                    </form>
                </div>
            </div>

            <!-- Goals Card -->
            <div class="col-md-6">
                <div class="card p-4">
                    <h4 class="card-title"><b>Goals</b></h4>
                    {{#if goals}}
                    <p>{{goals}}</p>
                    {{else}}
                    <p class="text-muted">No goals set yet.</p>
                    {{/if}}
                    <form action="/update-goals" method="POST">
                        <label for="goals" class="form-label">Update Goals</label>
                        <textarea class="form-control" id="goals" name="goals" rows="3" placeholder="Set your goals here...">{{goals}}</textarea>
                        <button class="btn btn-custom mt-3 w-100" type="submit">Update Goals</button>
                    </form>
                </div>
            </div>

            <!-- Favorite Recipes Card -->
            <div class="col-md-6">
                <div class="card p-4">
                    <h4 class="card-title"><b>Favorite Recipes</b></h4>
                    {{#if recipes.length}}
                    <div class="list-group mb-3">
                    {{#each recipes}}
                    <div class="list-group-item">
                        <div class="d-flex justify-content-between align-items-center">
                        <a href="{{this.url}}" target="_blank" class="text-decoration-none">{{this.name}}</a>
                        <form action="/remove-recipe" method="POST" class="d-inline">
                            <input type="hidden" name="recipeName" value="{{this.name}}">
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                        </div>
                    </div>
                    {{/each}}
                    </div>
                    {{else}}
                    <p class="text-muted">No favorite recipes found.</p>
                    {{/if}}
                </div>
                </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
